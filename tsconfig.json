{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@bitmachina/dinero-core": ["packages/core/src/index"],
      "@bitmachina/dinero-currencies": ["packages/currencies/src/index"],
      "@bitmachina/dinero-calculator-bigint": ["packages/calculator-bigint/src/index"],
      "@bitmachina/dinero-calculator-number": ["packages/calculator-number/src/index"],
      "@bitmachina/dinero.js": ["packages/dinero.js/src/index"],
      "@bitmachina/dinero-test": ["test/utils/index.ts"]
    }
  },
  "exclude": [
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/dist",
    "**/lib",
    "**/temp",
    "**/node_modules",
    "stories",
    "examples",
    "website"
  ]
}
